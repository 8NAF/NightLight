<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/nlBulb"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:contentDescription="@null"
        app:srcCompat="@drawable/ic_lightbulb_regular" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/defaultMargin"
        android:layout_toEndOf="@id/nlBulb"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nlMainStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="16dp"
            android:text="@string/dashboard"
            android:textAppearance="?android:attr/textAppearance"
            android:textSize="24sp" />

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:columnCount="3">

            <LinearLayout
                android:id="@+id/forceToggleView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/defaultMargin"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="vertical"
                android:padding="@dimen/defaultPadding"
                app:layout_columnWeight="1">

                <ImageButton
                    android:id="@+id/forceToggleIcon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/defaultMargin"
                    android:background="?themeDrawable"
                    android:contentDescription="@null"
                    android:tint="?themeCircleForeground"
                    app:srcCompat="@drawable/ic_power" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:text="@string/app_name"
                    android:textAppearance="?android:attr/textAppearance" />

                <TextView
                    android:id="@+id/forceStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/text_sub_desc" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/automationView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/defaultMargin"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="vertical"
                android:padding="@dimen/defaultPadding"
                app:layout_columnWeight="1">

                <ImageButton
                    android:id="@+id/automationIcon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/defaultMargin"
                    android:background="?themeDrawable"
                    android:contentDescription="@null"
                    android:tint="?themeCircleForeground"
                    app:srcCompat="@drawable/ic_alarm" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:text="@string/section_auto"
                    android:textAppearance="?android:attr/textAppearance" />

                <TextView
                    android:id="@+id/automationStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/text_sub_desc" />
            </LinearLayout>
        </androidx.gridlayout.widget.GridLayout>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/moreOptions"
        style="@style/MaterialButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_toEndOf="@id/nlBulb"
        android:text="@string/options" />
</RelativeLayout>