<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/cust_font</item>
        <item name="themeCircleBackground">@color/circleBackgroundDark</item>
        <item name="themeCircleForeground">@color/circleForegroundDark</item>
    </style>

    <style name="AppThemeLight" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#dcdcdc</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/cust_font</item>
        <item name="themeCircleBackground">@color/circleBackgroundLight</item>
        <item name="themeCircleForeground">@color/circleForegroundLight</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkSplash</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
    </style>

    <style name="BottomSheetDialogDark" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:colorBackground">#333333</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BottomSheetDialogLight" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:colorBackground">#fafafa</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
</resources>
