    <style name="BottomSheetDialogDark" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BottomSheetDialogLight" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MaterialButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="cornerRadius">?themeButtonRadius</item>
        <item name="android:textAppearance">?android:textAppearance</item>
        <item name="android:textColor">?themeColorText</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@color/colorAccent</item>
    </style>

    <style name="MaterialInfoButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="cornerRadius">?themeButtonRadius</item>
        <item name="android:textAppearance">?android:textAppearance</item>
        <item name="android:textColor">?themeColorText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_desc</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="icon">@drawable/ic_info</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="iconSize">12dp</item>
        <item name="android:text">@string/info</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="SectionHeader">
        <item name="android:textAppearance">?android:attr/textAppearance</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:padding">@dimen/defaultPadding</item>
    </style>

    <style name="ExperimentalBadge">
        <item name="android:text">@string/experimental</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceButton</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="backgroundColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
