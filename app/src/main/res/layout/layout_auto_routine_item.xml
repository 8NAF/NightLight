<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingTop="8dp"
    android:paddingEnd="16dp"
    android:paddingBottom="8dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/routineTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(No title)"
        android:textAppearance="?android:attr/textAppearance"
        android:textSize="@dimen/text_caption"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/routineTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="8dp"
        android:text="00:00 - 06:00"
        android:textSize="@dimen/text_desc"
        app:drawableStartCompat="@drawable/ic_alarm_small" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/routineColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="8dp"
        android:text="3500K"
        android:textSize="@dimen/text_desc"
        app:drawableStartCompat="@drawable/ic_color_small" />
</LinearLayout>