<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/defaultMargin"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.corphish.nightlight.activities.MasterSwitchActivity">

    <TextView
        android:id="@+id/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:text="@string/bed_time_title"
        android:textAppearance="?android:attr/textAppearance"
        android:textSize="24sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ExperimentalBadge"
        android:layout_below="@id/head"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="32dp"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="@dimen/bulb_size"
        android:layout_height="@dimen/bulb_size"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/ic_bed_time"
        android:id="@+id/bedTimeSwitch"
        android:contentDescription="@null"
        app:tint="?themeStroke" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textSize="13sp"
        android:text="@string/bed_time_desc"
        android:layout_below="@id/bedTimeSwitch"
        android:gravity="center_horizontal" />
</RelativeLayout>
