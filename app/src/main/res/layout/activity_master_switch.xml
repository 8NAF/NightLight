<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/defaultMargin"
    tools:context="com.corphish.nightlight.activities.MasterSwitchActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:text="@string/app_name"
        android:textAppearance="?android:attr/textAppearance"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/masterSwitch"
        android:layout_width="@dimen/bulb_size"
        android:layout_height="@dimen/bulb_size"
        android:layout_centerInParent="true"
        android:contentDescription="@null"
        app:srcCompat="@drawable/ic_power"
        app:tint="?themeStroke" />

    <TextView
        android:id="@+id/masterSwitchDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/masterSwitch"
        android:layout_margin="16dp"
        android:gravity="center_horizontal"
        android:text="@string/master_switch_desc_off"
        android:textSize="@dimen/text_desc" />
</RelativeLayout>
